<section id="column-right">
  <div class="inner">
    <!-- run the loop for each post -->
    <% @posts.each do |post| %>
      
        <div class="post-teaser">
          <div class="unpopped" id="post<%= post.id %>">
          <!-- circle with image and user rating - show different styles according to rating -->
          <div class="post-image" style="background: url(<%= post.image_object %>); background-size: cover;">
            <% if post.rating_total && post.rating_total > 0 %>
              <span class="rating-good"><%= post.rating_total %></span>
              <span class="rating-count"><%= post.rating_count %></span>
            <% elsif post.rating_total && post.rating_total <= 0 %>
              <span class="rating-bad"><%= post.rating_total %></span>
              <span class="rating-count"><%= post.rating_count %></span>
            <% else %> 
              <span class="info">no rating</span>
            <% end %>
          </div>
          <!-- further details about post -->
          <div class="details">
            <p class="address"><%= post.address %></p>
            <h2><%= link_to(post.title, post) %></h2>
            <p class="posted">happened <%= time_ago_in_words(post.created_at) %> ago</p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>
