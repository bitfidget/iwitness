<section class="details">
  <h1><span>All</span>Categories</h1>
  <table cellpadding="10px" border="0" cellspacing="0">  
    <% @categories.each do |category| %>
      <tr class="<%= cycle('bg1', 'bg2') %>"> 
        <td valign="top">
          <%= link_to(category.title, category) %>
        </td>
        <td valign="top">
          <% category.posts.each do |post| %>
            <%= link_to(post.title, post_path(post)) %> :: <%= post.address %><br> 
          <% end %>
        </td>
        <td valign="top"> 
          <nav class="meta">
            <ul>
              <% if @current_user && ( @current_user.admin == true ) %>
                <li><%= link_to("Update Category", edit_category_path(category)) %></li>
                <li><%= link_to("Delete Category", @post, :confirm => "Are you sure you want to delete category #{category.title.upcase}?", :method => :delete) %></li>
                <li><%= link_to("New Category", new_category_path) %></li>
              <% end %>
            </ul>
          </nav>
        </td>
      </tr>
    <% end %>
  </table>
</section>